[MAIN]
# 使用多个进程加速 pylint
jobs=0

# Python代码扩展名
extension-pkg-whitelist=

# 添加到Python路径的目录
init-hook='import sys; sys.path.append(".")'

# 要加载的Pylint插件
load-plugins=

# 永不检查的文件或目录
ignore=CVS,.git,__pycache__,build,dist,.venv,venv

# 使用正则表达式匹配要忽略的文件名
ignore-patterns=

# 从命令行解析的正则表达式，将文件添加到blacklist
ignore-paths=

# 文件将被检查
persistent=no

# 缓存大小
cache-size=500

[MESSAGES CONTROL]
# 禁用的消息
disable=
    C0103,  # invalid-name
    C0114,  # missing-module-docstring
    C0115,  # missing-class-docstring
    C0116,  # missing-function-docstring
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    R0914,  # too-many-locals
    R0915,  # too-many-statements
    W0613,  # unused-argument
    W0640,  # cell-var-from-loop

# 启用的消息
enable=
    W0611,  # unused-import
    W0612,  # unused-variable
    C0411,  # wrong-import-order

[REPORTS]
# 设置输出格式
output-format=text

# 在输出中包含消息的符号名称
include-ids=no

# 在输出中包含消息的符号名称
symbols=no

# 启用 'RP0004' 或 'R0004' 消息
reports=no

# 评估Python表达式的模板
evaluation=10.0 - ((float(5 * error + warning + refactor + convention) / statement) * 10)

[REFACTORING]
# 函数/方法体中的最大语句数
max-statements=50

# 函数/方法参数的最大数量
max-args=6

# 函数/方法局部变量的最大数量
max-locals=20

# 函数/方法分支的最大数量
max-branches=15

# 函数/方法返回语句的最大数量
max-returns=8

# 类属性的最大数量
max-attributes=10

# 类可以继承的父类的最大数量
max-parents=10

# 类公共方法的最大数量
max-public-methods=25

[BASIC]
# 命名样式
argument-naming-style=snake_case
attr-naming-style=snake_case
class-naming-style=PascalCase
class-attribute-naming-style=any
const-naming-style=UPPER_CASE
function-naming-style=snake_case
method-naming-style=snake_case
module-naming-style=snake_case
variable-naming-style=snake_case

# 正则表达式模式
argument-rgx=[a-z_][a-z0-9_]{2,30}$
attr-rgx=[a-z_][a-z0-9_]{2,30}$
class-rgx=[A-Z_][a-zA-Z0-9]+$
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__))$
function-rgx=[a-z_][a-z0-9_]{2,30}$
method-rgx=[a-z_][a-z0-9_]{2,30}$
module-rgx=(([a-z_][a-z0-9_]*)|([A-Z][a-zA-Z0-9]+))$
variable-rgx=[a-z_][a-z0-9_]{2,30}$

# 好的变量名
good-names=i,j,k,ex,Run,_,id,db,app,e,f

# 不好的变量名
bad-names=foo,bar,baz,toto,tutu,tata

# 不会触发 invalid-name 警告的名称
no-docstring-rgx=^_

[FORMAT]
# 最大行长度
max-line-length=88

# 最大模块行数
max-module-lines=1000

# 字符串用来缩进Python代码
indent-string='    '

# 期望的缩进数
indent-after-paren=4

[LOGGING]
# 格式字符串
logging-format-style=old

# 检查日志格式字符串
logging-modules=logging

[MISCELLANEOUS]
# 用于检查 fixme 注释的警告
notes=FIXME,XXX,TODO

[SIMILARITIES]
# 复制行的最小相似长度
min-similarity-lines=4

# 忽略注释
ignore-comments=yes

# 忽略docstring
ignore-docstrings=yes

# 忽略导入
ignore-imports=no

[SPELLING]
# 拼写检查字典名称
spelling-dict=

# 拼写检查私有字典文件路径
spelling-private-dict-file=

# 个人词典中存储的自定义单词
spelling-store-unknown-words=no

[TYPECHECK]
# 正则表达式匹配应该跳过的文件名
ignore-mixin-members=yes

# 忽略导入错误的模块名
ignored-modules=

# 忽略没有成员的类
ignored-classes=optparse.Values,thread._local,_thread._local

# 为每个类生成的成员
generated-members=

# 告诉 pylint 期望在特定模块中找到的成员
contextmanager-decorators=contextlib.contextmanager

[VARIABLES]
# 告诉 pylint，除此之外还有哪些变量名被允许
additional-builtins=

# 忽略 unused-variable 或 unused-import 警告的变量名
dummy-variables-rgx=_+$|(_[a-zA-Z0-9_]*[a-zA-Z0-9]+?$)|dummy|^ignored_|^unused_

# 预期出现但未使用的参数名
expected-unused-args=args,kwargs

# 禁用unused-variable检查的回调名称
callbacks=cb_,_cb

[CLASSES]
# 有效的metaclass
valid-metaclasses=abc.ABCMeta

# 定义装饰器的模块成员列表
defining-attr-methods=__init__,__new__,setUp

# 排除保护成员访问检查的方法名
exclude-protected=_asdict,_fields,_replace,_source,_make

[DESIGN]
# 耦合的最大数量
max-complexity=10

[IMPORTS]
# 被认为是标准库的模块
known-standard-library=

# 强制字母顺序导入
force-alphabetical-sort=no

[EXCEPTIONS]
# 可以在 except 语句中使用的异常
overgeneral-exceptions=Exception
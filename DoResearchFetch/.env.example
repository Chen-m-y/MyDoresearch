# =================================
# do_research_fetch 微服务环境变量配置
# =================================
# 复制为 .env 文件并根据实际环境修改相应的值

# =================================
# 服务基础配置
# =================================
HOST=0.0.0.0
PORT=8000
DEBUG=false
LOG_LEVEL=INFO

# 运行环境: development, production, testing
FLASK_ENV=development

# =================================
# 数据源API密钥配置
# =================================
# IEEE Xplore API密钥 - 从 https://developer.ieee.org/ 获取
IEEE_API_KEY=your_ieee_api_key_here

# Elsevier ScienceDirect API密钥 - 从 https://dev.elsevier.com/ 获取
ELSEVIER_API_KEY=your_elsevier_api_key_here

# DBLP 通常不需要API密钥，使用公开API
# DBLP_API_KEY=

# =================================
# API限流配置
# =================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# =================================
# 缓存配置
# =================================
# Redis连接URL，用于缓存搜索结果
REDIS_URL=redis://localhost:6379

# 缓存过期时间（秒）
CACHE_TTL=3600

# 是否启用缓存
ENABLE_CACHE=true

# =================================
# 数据源API端点配置
# =================================
IEEE_BASE_URL=https://ieeexplore.ieee.org
ELSEVIER_BASE_URL=https://api.elsevier.com
DBLP_BASE_URL=https://dblp.org/search/publ/api

# =================================
# 网络请求配置
# =================================
# HTTP请求超时时间（秒）
REQUEST_TIMEOUT=30

# 最大重试次数
MAX_RETRIES=3

# 重试间隔（秒）
RETRY_DELAY=1

# =================================
# 分页和结果限制配置
# =================================
DEFAULT_LIMIT=50
MAX_LIMIT=100

# 单次批量请求最大数量
MAX_BATCH_SIZE=10

# =================================
# 并发抓取配置
# =================================
# 是否启用并行摘要抓取
ENABLE_PARALLEL_ABSTRACT=true

# 最大并发请求数（推荐6-10）
MAX_CONCURRENT_REQUESTS=6

# 请求间延迟（毫秒，推荐100-200）
ABSTRACT_REQUEST_DELAY_MS=150

# 摘要抓取超时时间（秒）
ABSTRACT_TIMEOUT_SECONDS=15

# =================================
# 日志和监控配置
# =================================
# 日志文件路径
LOG_FILE=logs/app.log

# 是否启用访问日志
ENABLE_ACCESS_LOG=true

# 是否启用错误日志
ENABLE_ERROR_LOG=true

# =================================
# 安全配置
# =================================
# API访问密钥（可选，用于保护API端点）
# API_SECRET_KEY=your_secret_key_here

# 允许的来源域名（CORS配置）
ALLOWED_ORIGINS=*

# =================================
# 性能优化配置
# =================================
# 工作进程数（生产环境建议设置为CPU核心数）
WORKERS=1

# 每个进程的线程数
THREADS=4

# 连接池大小
CONNECTION_POOL_SIZE=10